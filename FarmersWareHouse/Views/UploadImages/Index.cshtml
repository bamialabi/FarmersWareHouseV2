@model Core.DataAccess.ArtWork 
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("Index", "UploadImages", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <div class="form-group ">
            <div class="col-md-2">
                State   
            </div>
            
            <div class="col-md-10">
                 @Html.DropDownList("stateID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <div class="col-md-2">
                Sub Component   
            </div>
            <div class="col-md-10">
                  @Html.DropDownList("SubComponentID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>
            <div class="col-md-10">
                <input name="image" type="file" />

            </div>
            <div class="col-md-10">
                <input type="submit" name="Submit " class="btn-default" value="Submit" />

            </div>
        </div>
}