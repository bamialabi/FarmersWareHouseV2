@model IEnumerable<FarmersWareHouse.Controllers.ReportsController.ViewModel>

@{
    ViewBag.Title = "GetData";
}

<h2>Reports - Overview</h2>



<div class="col-md-12">
    @using (Html.BeginForm("GetData", "Reports", FormMethod.Post))
    {

        <div class="row">
            <hr />
            <div class="form-group">
                <label class="control-label col-md-1">Filter</label>

                <div class="col-md-2">
                    @Html.DropDownList("YearID", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    @Html.DropDownList("CIGID", null, htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <input type="submit" name="submit" class="btn btn-default" value="Search" />
                </div>
                <div class="col-md-3">

                </div>
            </div>

        </div>
        <br />

        <table class="table table-hover">
            <tr>

                <th>
                    Indicator
                </th>
                <th>
                    Target Data
                </th>
                <th>
                    Achievement Data
                </th>

                <th>
                    ACH %
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RegisterIndicatorIds)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TargetData)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AchievementData)
                    </td>
 
                    <td>
                        @string.Format("{0:n2}", ((item.AchievementData / item.TargetData) * 100))
                    </td>
                    
                </tr>
            }

        </table>
    }
</div>
